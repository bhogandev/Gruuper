@using BibleVerse.DTO
@using Newtonsoft.Json
@using Microsoft.AspNetCore.Http;
@{
    UserViewModel user = JsonConvert.DeserializeObject<UserViewModel>(Context.Session.GetString("user"));
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>BibleVerse - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div>
        <div id="ubar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <a class="navbar-brand" asp-area="" asp-controller="BBV" asp-action="Index">BibleVerse</a>
            <form class="form-group" method="get", asp-action="Search" asp-controller="BBV">
                <input class="form-control" type="text" name="SearchBox" />
                <input type="submit" value="Search" />
            </form>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="uar-inner" class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <div id="ubar-nav">
                    <ul>
                        <!--Add anchor element with notifications dropdown-->
                        <li>
                            <a class="navbar-brand" asp-area="" asp-controller="BBV" asp-action="Home" asp-route-orgID="@user.OrganizationId">@user.OrgName</a>
                        </li>
                        <li>
                            <a class="navbar-brand" asp-area="" asp-controller="BBV" asp-action="Account">@user.UserName</a>
                        </li>
                        <li>
                            <a class="navbar-brand" asp-area="" asp-controller="BBV" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
                <div id="ubar-menu">
                </div>
            </div>
        </div>
        @RenderBody()
    </div>
</body>
</html>
